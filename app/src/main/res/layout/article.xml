<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/article_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <FrameLayout
                android:id="@+id/header_background"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                tools:background="#cef2e0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/article_header_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="@string/game_find_title"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="@+id/header_background"
                app:layout_constraintStart_toStartOf="@+id/header_background"
                app:layout_constraintTop_toTopOf="@+id/header_background" />

            <ImageView
                android:id="@+id/article_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:background="@android:color/holo_red_dark"
                android:contentDescription="@string/article_thumbnail"
                app:layout_constraintBottom_toBottomOf="@+id/article_progress_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/article_progress_bar" />

            <TextView
                android:id="@+id/article_title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="20sp"
                android:transitionName="title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/article_image_view"
                app:layout_constraintTop_toBottomOf="@+id/header_background"
                tools:text="Testowy sting Testowy sting Testowy sting Testowy sting Testowy sting Testowy sting Testowy sting Testowy sting Testowy sting Testowy sting Testowy sting Testowy sting Testowy sting " />

            <ProgressBar
                android:id="@+id/article_progress_bar"
                android:layout_width="20dp"
                android:layout_height="20dp"

                app:layout_constraintBottom_toBottomOf="@+id/article_title_text_view"
                app:layout_constraintEnd_toEndOf="@+id/article_title_text_view"
                app:layout_constraintStart_toStartOf="@+id/article_title_text_view"
                app:layout_constraintTop_toTopOf="@+id/article_title_text_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</merge>